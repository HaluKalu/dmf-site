<!doctype html>
<html lang="en">
  <head>
    <title>Рейтинг</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" href="../../images/favicon.ico" type="image/x-icon">
    <link href="https://fonts.googleapis.com/css?family=Russo+One" rel="stylesheet">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="../../stylesheets/style.css"> 
  </head>
  <body>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
      
      <% include header %>
      <div class="container" style="overflow:auto;">
     <table class="table table-responsive" id="table">
         <thead>
             <tr>
                <th>#</th>                 
                <th>Логин</th>
                <th><div  class="d-none d-md-block">Институт</div></th>
                <th><div  class="d-none d-md-block">Группа</div></th>
                <th>Токены</th>
             </tr>
         </thead>
         <tbody>
             <%tmp=0%><% users.forEach(function(usr){ %><%if (usr.verify) {%> <%if(usr.username != "halukalu"){%><tr>
                <%tmp++%>
                    <td><%=tmp%></td>                    
                    <td><a href="/profile/<%=usr.username%>" class="button" ><%=usr.username%></a></td>
                    <td><div class="d-none d-md-inline"><%=usr.institut%></div></td>
                    <td><div class="d-none d-md-inline"><%=usr.group%></div></td>
                   <%if(usr.username=="halukalu"){%><td>DEVELOPER</td><%} else {%><td><i><%=usr.tokens%> MFC</i></td><%}%> 
                </tr><%}else{%> <script> $('.table').prepend("<tr style='text-decoration:line-through'><td>0</td>                    <td><a href='/profile/<%=usr.username%>' class='button' ><%=usr.username%></a></td><td><div class='d-none d-md-inline'><%=usr.institut%></div></td><td><div class='d-none d-md-inline'><%=usr.group%></div></td><td>DEVELOPER</td></tr>")</script> <%}%>
                <%}%><%})%>
         </tbody>
     </table>  
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>